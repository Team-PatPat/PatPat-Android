<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<!--'@{test.text}'-->
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.chat.ChattingFragment"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#D8D8D8"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
            android:layout_marginBottom="4dp" />


        <androidx.cardview.widget.CardView
            android:layout_width="335dp"
            android:layout_height="550dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/letter_cardFrame"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/letter_contentsframe"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/letter_send_user"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="윤성준에게"
                    android:textSize="22sp"
                    android:fontFamily="@font/pretendard_bold"/>

                <FrameLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="290dp"
                    android:layout_height="168dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="23dp"
                            android:background="@android:color/transparent" />

                        <View
                            android:id="@+id/letter_lineFrame"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:background="@drawable/letter_lineframe"/>
                    </LinearLayout>


                    <TextView
                        android:id="@+id/letter_send_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxWidth="290dp"
                        android:lineSpacingExtra="8.5dp"
                        android:textAlignment="textStart"
                        android:text="델리스파이스 - 너의 목소리가 들려\n와이(why)-운명\n조성모-너의곁으로\n이승철-긴하루\n버즈(Buzz)-남자를몰라\n브라운 아이드 소울 - 정말 사랑했을까"
                        android:textSize="16sp"
                        android:fontFamily="@font/pretendard_medium"/>


                </FrameLayout>

                <TextView
                    android:id="@+id/letter_send_ps"
                    android:layout_marginTop="15dp"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:text="@string/letterPs1"
                    android:fontFamily="@font/pretendard_medium"/>


                <androidx.cardview.widget.CardView

                    android:layout_width="290dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="0dp"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/letter_send_comment"
                        android:layout_width="220dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/nanum_glad"
                        android:shadowColor="#000000"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:textSize="22sp"
                        android:shadowRadius="1"
                        android:text="이것은 효과를 입힌 폰트입니다.\nThis is a tunning font\n 널치킨 남자를 몰라 "
                        android:visibility="visible"/>
                    
                    <ImageView
                        android:id="@+id/letter_send_image"
                        android:layout_width="200dp"
                        android:layout_height="160dp"
                        android:layout_gravity="center"
                        android:visibility="visible"/>


                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/letter_send_from"
                    android:layout_marginTop="10dp"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:text="@string/letterFrom1"
                    android:fontFamily="@font/pretendard_medium"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>





    </LinearLayout>


</layout>
