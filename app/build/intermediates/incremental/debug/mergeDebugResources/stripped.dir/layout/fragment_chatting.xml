<?xml version="1.0" encoding="utf-8"?>


                                                              
                                                        
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.chat.ChattingFragment" android:tag="layout/fragment_chatting_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:tag="binding_1">

            <include
                android:id="@+id/appbar"
                layout="@layout/custom_appbar_chatting" />

        </com.google.android.material.appbar.AppBarLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#D8D8D8"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
            android:layout_marginBottom="4dp"/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/chat_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"/>

        </FrameLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:weightSum="9"
                app:layout_constraintBottom_toBottomOf="parent">

                <EditText
                    android:background="@drawable/chat_inputtext"
                    android:id="@+id/chat_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="14dp"
                    android:hint="어떤 고민이 있나요?"
                    android:maxLines="3"
                    android:text=""
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/chat_sendbtn"
                    android:scaleType="fitXY"
                    android:background="@drawable/chat_btn_load"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="1" />

            </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
         