<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grayScale200">

    <TextView
        android:id="@+id/textView_save_letter_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="@string/save_letter_prompt"
        android:textAlignment="center"
        android:textAppearance="@style/Typography.Medium16"
        android:textColor="@color/grayScale500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat_save_letter_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_save_letter_item">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_yes_save_letter_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20sp"
            android:layout_weight="1"
            android:background="@drawable/bg_orange_r12"
            android:stateListAnimator="@null"
            android:text="네 좋아요!"
            android:textAppearance="@style/Typography.Medium14"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_no_save_letter_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_white_orange_r12"
            android:stateListAnimator="@null"
            android:text="대화 더 할래요"
            android:textAppearance="@style/Typography.Medium14"
            android:textColor="@color/mainColor" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>