<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="236dp"
    android:elevation="4dp"
    android:gravity="center"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView_counselor"
            android:layout_width="102dp"
            android:layout_height="116dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:src="@drawable/img_boknam" />

        <LinearLayout
            android:id="@+id/linearLayout_state_counselor"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_below="@+id/imageView_counselor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-19dp"
            android:background="@drawable/bg_counselor_blue_r20"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp">

            <ImageView
                android:id="@+id/imageView_state_counselor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_blue_heart" />

            <TextView
                android:id="@+id/textView_state_counselor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="친밀도 2%"
                android:textAlignment="textStart"
                android:textAppearance="@style/Typography.SemiBold18"
                android:textColor="@color/pointColor"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView_name_counselor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout_state_counselor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:text="복남이"
            android:textAppearance="@style/Typography.Bold16"
            android:textColor="@color/grayScale600" />

        <TextView
            android:id="@+id/textView_introduction_counselor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_name_counselor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="22dp"
            android:text="위로가 필요하다면?\n언제나 내 편 복남이"
            android:textAlignment="center"
            android:textAppearance="@style/Typography.Medium14"
            android:textColor="@color/grayScale500" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
